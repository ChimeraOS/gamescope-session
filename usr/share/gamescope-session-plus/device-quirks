# ROG Ally
ALLY_LIST="ROG Ally RC71L_RC71L:ROG Ally RC71L"
if [[ ":$ALLY_LIST:" =~ ":$SYS_ID:"  ]]; then
  # Dependent on a special --force-panel-type option in gamescope-plus
